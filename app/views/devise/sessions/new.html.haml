- title 'ログイン'
.row
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "well" }) do |f|
      %fieldset
        %h3 ログイン
        %hr/
        .control-group
          = f.label :login_name, 'ユーザー名', class: "control-label"
          .controls
            = f.text_field :login_name, class: "span3"
        .control-group
          = f.label :password, 'パスワード', class: "control-label"
          .controls
            = f.password_field :password
        .control-group
          .controls
            = f.label :remember_me, f.check_box(:remember_me) + "ログインしたままにする", class: "checkbox"
        = f.submit "ログイン", class: "btn btn-primary"
        %p
          入部はまだですか？
          %strong= link_to "入部しましょう！", new_user_registration_path
