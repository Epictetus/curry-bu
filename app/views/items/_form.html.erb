<div class="row">
  <div class="span12">
    <%= form_for(@item, html: {multipart: true, class: "form-horizontal"}) do |f| %>
      <% if @item.errors.any? %>
        <div class="alert alert-block alert-error">
          <a class="close">×</a>
          <h4 class="alert-heading"><strong><%= pluralize(@item.errors.count, "error") %></strong> prohibited this item from being saved:</h4>

          <ul>
            <% @item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <fieldset>
        <legend>食べたものについて</legend>

        <div class="control-group">
          <%= f.label :title, "名前" %>
          <div class="controls">
            <%= f.text_field :title %>
            <p class="help-block">カレー、カレーうどんなど</p>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :image, "写真" %>
          <div class="controls">
            <%= f.file_field :image %>
            <p class="help-block">食べたものの写真を選んでください！</p>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :price, "値段" %>
          <div class="controls">
            <div class="input-append">
              <%= f.text_field :price, {class: "span2"} %>
              <span class="add-on">円</span>
            </div>
            <p class="help-block">大体で良いです</p>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :comment, "コメント" %>
          <div class="controls">
            <%= f.text_area :comment, {rows: 3} %>
            <p class="help-block">感想があれば</p>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :ate_at, "食べた日" %>
          <div class="controls">
            <%= f.date_select :ate_at, {use_month_numbers: true, end_year: Time.now.year, date_separator: "-"}, {class: "span1"} %>
          </div>
        </div>

      </fieldset>

      <fieldset>
        <legend>お店について</legend>

        <div class="control-group">
          <%= f.label :shop_id, "お店" %>
          <div class="controls">
            <%= f.collection_select :shop_id, Shop.all, :id, :name, include_blank: "選んでください" %>
          </div>
        </fieldset>

        <div class="form-actions">
          <%= f.submit "登録", disable_with: "登録中...", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
</div>
