<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Comment</th>
    <th>Ate at</th>
    <th>Shop</th>
    <th>Price</th>
    <th>User</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= link_to item.title, item %></td>
    <td><%= item.comment %></td>
    <td><%= item.ate_at %></td>
    <td><%= item.shop.name %></td>
    <td><%= item.price %></td>
    <td><%= item.user.login_name %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
